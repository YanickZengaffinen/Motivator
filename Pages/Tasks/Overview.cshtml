@page
@model Motivator.Pages.Tasks.OverviewModel
@{
    ViewData["Title"] = "Overview";
}

<script src="https://unpkg.com/vue/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios@0.12.0/dist/axios.min.js"></script>

<h2>Overview</h2>

<div id='app'>
    <div>
        <label>Your Tasks</label>
        <table class="table table-hover table-striped">
            <tr v-for="(item, index) in sortedTasks" class="row">
                <td class="col">{{item.Title}}</td>
            </tr>
        </table>
        <button v-on:click="loadTasks">Reload</button>
        
    </div>
</div>

<script src="~/js/tasks/overview.js" asp-append-version="true"></script>
